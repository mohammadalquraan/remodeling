<%= form_with(model: @admin) do |form| %>

  <%= render "shared/errors", object:@admin%>

  <div class="row">
    <div class="col-2">
      <div>
        <%= form.label :email, style: "display: block" %>
        <%= form.text_field :email %>
      </div>

      <div>
        <%= form.label :password, style: "display: block" %>
        <%= form.text_field :password %>
      </div>

      <div>
        <%= form.label :name, style: "display: block" %>
        <%= form.text_field :name %>
      </div>
    </div>
    <div class="col-2">
      <div>
        <%= form.label :admin_type, style: "display: block" %>
        <%= form.select :admin_type, Admin.admin_types.to_a %>
      </div>

    </div>
  </div>




  <div class="mt-2">
    <%= form.submit %>
  </div>
<% end %>
