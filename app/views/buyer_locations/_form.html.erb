<%= form_with(model: @buyer_location) do |form| %>

  <%= render "shared/errors", object:@buyer_location %>

  <div class="row">
    <div class="col-2">
      <div>
        <%= form.label :location_id, style: "display: block" %>
        <% locations = {}%>
        <% Location.all.each do |location| %>
          <%  locations[location[:zip_code]]=location[:id] %>
        <% end %>
        <%= form.select :location_id, options_for_select(locations) %>
      </div>

      <div>
        <%= form.label :buyer_id, style: "display: block" %>
        <% buyers = {}%>
        <% Buyer.all.each do |buyer| %>
          <%  buyers[buyer[:name]]=buyer[:id] %>
        <% end %>
        <%= form.select :buyer_id, options_for_select(buyers) %>
      </div>
    </div>
    <div class="col-2">
      <div>
        <%= form.label :active, style: "display: block" %>
        <%= form.check_box :active %>
      </div>
    </div>
  </div>

  <div class="mt-2">
    <%= form.submit %>
  </div>

<% end %>
