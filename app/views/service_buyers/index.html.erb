<p style="color: green"><%= notice %></p>


<div id="service_buyers" class="m-5">
  <h1>Service buyers</h1>

  <table class="table">
    <tr>
      <th>Id</th>
      <th>Service</th>
      <th>Buyer</th>
      <th>Payout</th>
      <th>Active</th>
      <th>Actions</th>
    </tr>

    <% @service_buyers.each do |service_buyer| %>
      <tr>
        <td><%= link_to service_buyer.id, service_buyer %></td>
        <td><%= Service.find(service_buyer.service_id)[:name] %></td>
        <td><%= Buyer.find(service_buyer.buyer_id)[:name] %></td>
        <td> <%= service_buyer.payout %> </td>
        <td> <%= service_buyer.active %> </td>
        <td>
          <%= link_to "Edit", edit_service_buyer_url(service_buyer), class: 'btn btn-warning btn-sm' %>
          <%= button_to "Delete", service_buyer, method: :delete, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </table>
  <%= link_to "New service buyer", new_service_buyer_path, class:'btn btn-success' %>

</div>

