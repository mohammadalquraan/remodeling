<%= form_with(model: location) do |form| %>

  <%= render "shared/errors", object:location%>

  <div>
    <%= form.label :city, style: "display: block" %>
    <%= form.text_field :city %>
  </div>

  <div>
    <%= form.label :country, style: "display: block" %>
    <%= form.text_field :country %>
  </div>

  <div>
    <% state_names = STATE_NAMES_AND_CODES.map {|code,name| [name,code]}%>
    <%= form.label :state_name, style: "display: block" %>
    <%= form.select :state_name, options_for_select( state_names, @location[:state_code])%>  </div>

  <div>
    <%= form.label :zip_code, style: "display: block" %>
    <%= form.number_field :zip_code %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
